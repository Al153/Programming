#include string_tools.cll  
int count_block_palindromes(@char word, int length)  //this is a comment
	int limit = length/2 + 1;
	int total = 0;
	int i;
	printf("this is a string\n");  //strings and stuff
	for(i = 0,i<limit,i = i + 1)
		if (check_if_equal(word,word+length-i,i)) then
			total = total + count_block_palindromes(word+i, length-i);
		endif;
	loop;
	return total;
end;