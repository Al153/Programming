void in(@char buf)
	int i = 0;
	int character;
	int continue = 1;
	while (continue) do
		character = getw();
		if (character == 10) then
			buf[i] = 0; //nullifies string
			continue = 0; //breaks
		else
			buf[i] = character;
			i = i+1;
		endif;
	loop;
end;

void in_echo(@char buf)
	int i = 0;
	int character;
	int continue = 1;
	while (continue) do
		character = getw();
		putc(character);
		if (character == 10) then
			buf[i] = 0; //nullifies string
			continue = 0; //breaks
		else
			buf[i] = character;
			i = i+1;
		endif;
	loop;
end;

//CLL printf (implemented in assembly as a built_in)
void printf_CLL(@char buf)
	int i = 0;
	int character;
	int continue = 1;
	while (continue) do
		character = buf[i];
		putc(character);
		if (character == 0) then
			continue = 0; //breaks
		endif;
		i = i+1;
	loop;
end;

