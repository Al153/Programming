void print_hex(@char string, int size)


	@char lookup = "0123456789ABCDEF"; //prints the hex of a string 
	@char 3 buf = [0,0,0];
	int i;
	char high;
	char low;


	for (i = 0, i<size, i = i + 1)
		high = string[i]>>4;
		low = string[i]&15;
		buf[0] = lookup[high];
		buf[1] = lookup[low];
		printf(buf);
	loop;
end;
